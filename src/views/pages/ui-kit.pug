extends ../layouts/default.pug
include ../helpers/mixins

block variables
	- const title = "UI-kit";

block content
	.ui-container-fluid.white
		.ui-container
			.row
				.col-4
					h3 Text field
					+input('email', '', 'email', 'email', 'required', 'Email')
					block dropdown
						- dropdownTitle = 'Dropdown'
						- rooms = false
						- guests = false
						include ../../blocks/modules/dropdown/dropdown.pug
					block input-date-mask
						- maskDropdown__title = 'Masked text field'
						include ../../blocks/modules/input-date-mask/input-date-mask.pug
					block date-dropdown
						- dateDropdownTitle_1 = 'Date Dropdown'
						- dateDropdownTitle_2 = 'Date Dropdown'
						include ../../blocks/modules/date-dropdown/date-dropdown.pug
					h3 Filter date dropdown
					block date-dropdown-filter
						include ../../blocks/modules/date-dropdown-filter/date-dropdown-filter.pug
					h3 Subscription text field
					block form-email-subscription
						include ../../blocks/modules/form-email-subscription/form-email-subscription.pug


				.col-4
					block checkbox-options
						include ../../blocks/modules/checkbox-options/checkbox-options.pug
					h3 RADIO BUTTONS
					block radio-options
						- radioId_1 = 'radio_man'
						- value_1 = 'Мужчина'
						- radioId_2 = 'radio_woman'
						- value_2 = 'Женщина'
						include ../../blocks/modules/radio-options/radio-options.pug
					block toggle
						h3 Toggle
						- toggleId = 'toggle1'
						- toggleChecked = false
						- toggleTitle = 'Получать спецпредложения'
						include ../../blocks/modules/toggle/toggle.pug
						- toggleId = 'toggle2'
						- toggleChecked = true
						- toggleTitle = 'Получать спецпредложения'
						include ../../blocks/modules/toggle/toggle.pug

					block btn-like
						include ../../blocks/modules/btn-like/btn-like.pug

					block btn-rate
						include ../../blocks/modules/btn-rate/btn-rate.pug

				.col-4
					block range-slider
						include ../../blocks/modules/range-slider/range-slider.pug

					h3 Buttons
					.ui-kit_btns-wrapper
						+btn-purple('/', 'Click me')
						br
						+btn-transparent('/', 'Click me')
						br
						+btn-link('/', 'Click me')
						br
						+btn-long('/', 'перейти к оплате')

					h3 Pagination
					block pagination
						include ../../blocks/modules/pagination/pagination.pug
			.row
				.col-4
					block dropdown-rooms
						- dropdownTitle = 'Dropdown Rooms'
						- rooms = true
						- guests = false
						include ../../blocks/modules/dropdown/dropdown.pug

					block checkbox-list-expandable
						include ../../blocks/modules/checkbox-list-expandable/checkbox-list-expandable.pug

					block img-with-text-list
						include ../../blocks/modules/img-with-text-list/img-with-text-list.pug

				.col-4
					block dropdown-guests
						- dropdownTitle = 'Dropdown Guests'
						- rooms = false
						- guests = true
						include ../../blocks/modules/dropdown/dropdown.pug
					block checkbox-rich
						include ../../blocks/modules/checkbox-rich/checkbox-rich.pug
					block <review></review>
						include ../../blocks/modules/review/review.pug

				.col-4
					block bullet-list
						include ../../blocks/modules/bullet-list/bullet-list.pug
	.ui-container-fluid
		.ui-container.cards
			.row
				.col-4
					block card_room-search
						include ../../blocks/modules/card/__room-search/card__room-search.pug

					block card_registration
						include ../../blocks/modules/card/__registration/card__registration.pug



block scripts
	script(src="../js/main.js")

block header
	include ../../blocks/modules/header/header.pug

block header__log-in
	include ../../blocks/modules/header__log-in/header__log-in.pug

block footer
	include ../../blocks/modules/footer/footer.pug

block footer__creative
	include ../../blocks/modules/footer__creative/footer__creative.pug